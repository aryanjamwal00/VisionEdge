<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Mode label at top-left -->
    <TextView
        android:id="@+id/txtMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="Mode: EDGE"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="4dp" />

    <!-- Camera preview -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Processed (OpenCV) frame overlay -->
    <ImageView
        android:id="@+id/processedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- Controls at bottom -->
    <!-- Filter buttons at bottom + Capture -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#80000000"
        android:padding="8dp">

        <Button
            android:id="@+id/btnOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Original"
            android:layout_margin="8dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grayscale"
            android:layout_margin="8dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnEdge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edges"
            android:layout_margin="8dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:layout_margin="8dp"
            android:textColor="@android:color/white" />
    </LinearLayout>


</RelativeLayout>
